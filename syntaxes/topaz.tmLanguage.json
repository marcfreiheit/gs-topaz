{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Topaz",
	"patterns": [
		{
			"include": "#commands"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#SmallTalk"
		}
	],
	"repository": {
		"commands": {
			"patterns": [{
				"name": "keyword.control.topaz",
				"match": "\\b(abort|allstacks|begin|break|category:|commit|continue|c|debugrun|define|disassem|display|doit|down|edit|errorcount|exec|exit|exitifnoerror|expecterror|expectvalue|fileformat|fileout|fr_cls|frame|gcitrace|help|hierachy|history|iferr|iferr_clear|iferr_list|iferror|implementors|input|inspect|interp|level|limit|list|listw|l|literals|loadua|login|logout|logoutifloggedin|lookup|nbresult|nbrun|nbstep|obj1|obj2|object|omit|output|pausefordebug|pkglookup|printit|protectmethods|quit|releaseall|remark|removeallclassmethods|run|send|senders|shell|spawn|stack|status|step|stk|strings|stringsic|subclasses|temporary|thread|threads|time|unprotectmethods|up|where)\\s"
			},
			{
				"match": "\\b(methodsFor:).+(stamp:).+\\s",
				"captures": {
					"1": {"name": "keyword.control.topaz"},
					"2": {"name": "keyword.control.topaz"}
				}
			},
			{
				"match": "\\b(object:).+(at:).+(put:).+\\b",
				"captures": {
					"1": {"name": "keyword.control.topaz"},
					"2": {"name": "keyword.control.topaz"},
					"3": {"name": "keyword.control.topaz"}
				}
			},
			{
				"match": "\\b(set) (cachename:|category:|class:|compile_env:|editorname:|gemnetid:|gemstone:|history:|hostpassword:|hostusername:|inconversion|limit:|listwindow:|nrsdefaults:|password:|session:|sourcestringclass:|stackpad:|tab:|transactionmode|username:).+",
				"captures": {
					"1": {"name": "keyword.control.topaz"},
					"2": {"name": "variable.parameter.topaz"}
				}
			}]
		},
		"strings": {
			"name": "string.quoted.double.topaz",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.topaz",
					"match": "\\\\."
				}
			]
		},
		"SmallTalk": {
			"name": "source.smalltalk.embedded.topaz",
			"begin": "^(method:|classmethod:).+",
			"beginCaptures": {
				"1": { "name": "keyword.control.topaz" }
			},
			"end": "%",
			"endCaptures": { "0": {"name": "keyword.control.topaz"} },
			"patterns": [{ "include": "source.smalltalk" }]
		}
	},
	"scopeName": "source.topaz"
}